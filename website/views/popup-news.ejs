            <p>ใส่วันที่</p>
            <input type="date">
        </div>
        <div class="form-group">
            <p>ใส่เวลา</p>
            <input type="time">
        </div>
        <div class="btn-container">
            <button>เสร็จสิ้น</button>
            <button onclick="window.parent.closePopup()">ปิด</button>
        </div>
    </div>
